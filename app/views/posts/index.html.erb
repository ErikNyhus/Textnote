<div class="container">
<div id="blog-container" class="span-16 last">
<% for item in @posts -%>
  <% if item.published? -%>
  
    <h2><%=h item.title %></h2>
    
    <p><%=h item.body[/.*/] %></p>
    <code><%=h item.author %></code>
    
    <hr />
  <% end -%>
<% end -%>
<span class="large">
<% if @page == 1 then -%>
  <%= link_to 'Next', blog_page_path(:page => @page+1) %>
<% elsif @page == @last_page then -%>
  <%= link_to 'Previous', blog_page_path(:page => @page-1) %>
<% else -%>
  <%= link_to 'Previous', blog_page_path(:page => @page-1) %>
  <%= link_to 'Next', blog_page_path(:page => @page+1) %>
<% end -%>
</span>
</div>
</div>
